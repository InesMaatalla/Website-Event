{% extends 'base.html.twig' %}

{% block title %}Afficher profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-4 ">
                <img src="{{ asset('uploads/user_image/' ~  user.imageFilename) }}">
            </div>

            <div class=" col order-1">
                <h2 class="text-center my-3"> {{ user.pseudo }}</h2>
                <table class="table table-light table-hover">
                    <tr class="table-light">
                        <th scope="row">Nom :</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr class="table-primary">
                        <th scope="row">Prénom :</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr class="table-secondary">
                        <th scope="row">Téléphone :</th>
                        <td>{{ user.telephone }}</td>
                    </tr>
                    <tr class="table-primary">
                        <th scope="row">Email :</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr class="table-secondary">
                        <th scope="row">Campus :</th>
                        <td>{{ user.campus }}</td>
                    </tr>
                </table>
                <div class="container">
                    <div class="row ">
                        <div class="gap-2 d-md-flex justify-content-md-start flex flex-nowrap ">
                            <a href="{{ url('default_home') }}" class="btn btn-outline-secondary"
                               style="width: 130px">Retour</a>

                            {% if user.id == app.user.id %}
                                <a href="{{ path('monProfil') }}" class="btn btn-outline-secondary"
                                   style="width: 130px">Modifier</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}